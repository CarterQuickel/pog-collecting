<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pog Crates -> Chat Room</title>
    <link rel="stylesheet" href="../static/css/chatroom.css">
</head>

<body>
    <div id="chatroomBanner">
        <div class="leftstuff">
            <div style="display: none" id="userdata"><%= JSON.stringify(userdata) %></div>
            <h1 style="margin-left: 10px;">Chat Room</h1>
            <div id="userCont">
                <img id="userPic" width="20" height="20" src="<%= userdata.pfp %>"/>
                <h4 style="color: white"><%= userdata.displayName %>
            </div>
            <div style="display: none" id="maxPogs"><%= JSON.stringify(maxPogs) %></div>
        </div>
            <div class="rightstuff">
            <a href="/collection" id="circleButton"> < </a>
        </div>
    </div>
    <div id="messageCont">
        <!-- messages will be appended here -->
    </div>

    <div id="chatContainer">
        <form>
            <input type="text" id="messageInput" placeholder="Type your message..." autocomplete="off" required />
            <button id="submitBtn" type="submit">Send</button>
        </form>
    </div>

    <!-- embed userdata for client scripts -->
    <div id="userdata" style="display:none"><%= JSON.stringify(userdata || {}) %></div>

    <!-- socket.io client and chat script -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="../static/js/chat.js"></script>
</body>

</html>