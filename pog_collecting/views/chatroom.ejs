<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="../static/icons/title/Pogglebar_Favicon.png" />
    <title>Chat Room</title>
    <link rel="stylesheet" href="../static/css/chatroom.css">
</head>

<body>
    <div id="chatroomBanner">
        <div class="leftstuff">
            <div style="display: none" id="userdata"><%= JSON.stringify(userdata) %></div>
            <h1 style="margin-left: 10px;">Chat Room</h1>
            <div style="display: none" id="maxPogs"><%= JSON.stringify(maxPogs) %></div>
        </div>
        <div class="rightstuff"></div>
            <a href="/collection" id="circleButton"> < </a>
        </div>
    </div>

    <div id="messageCont"></div>

    <div id="chatContainer">
        <form>
            <input id="messageInput" autocomplete="off" placeholder="Type a message..." />
            <button id="submitBtn" type="submit">Send</button>
        </form>
    </div>

    <!-- embed server userdata so client JS can read pfp -->
    <div id="userdata" style="display:none"><%= JSON.stringify(userdata || {}) %></div>

    <!-- socket.io client + chat script -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="/static/js/chat.js"></script>
</body>

</html>